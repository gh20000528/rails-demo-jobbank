<form action="">
    <input type="text" name="keyword" value="<%= params[:key] %>" placeholder="請輸入想查詢文字...">
    <input type="submit" value="查詢">
</form>


<!-- link_to 等於用 a 標籤跳轉 -->
<%= link_to '新增' , '/resumes/new'  if policy(Resume).new?%>  
